{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "make spp",
            "type": "shell",
            "command": "make",
            "args": [
                "-j"
            ],
            "options": {
                "cwd": "${workspaceFolder}/spp",
                "env": {
                    "RTE_SDK": "${workspaceFolder}/dpdk",
                    "RTE_TARGET": "x86_64-native-linuxapp-gcc"
                }
            }
        },

        {
            "label": "make debug spp",
            "type": "shell",
            "command": "make",
            "args": [
                "-j"
            ],
            "options": {
                "cwd": "${workspaceFolder}/spp",
                "env": {
                    "RTE_SDK": "${workspaceFolder}/dpdk",
                    "RTE_TARGET": "x86_64-native-linuxapp-gcc",
                    "EXTRA_CFLAGS": "-O0 -g"
                }
            },
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },

        {
            "label": "clean spp",
            "type": "shell",
            "command": "make",
            "args": [
                "dist-clean"
            ],
            "options": {
                "cwd": "${workspaceFolder}/spp"
            }
        },

        {
            "label": "make dpdk",
            "type": "shell",
            "command": "make",
            "args": [
                "install",
                "T=$RTE_TARGET",
                "-j"
            ],
            "options": {
                "cwd": "${workspaceFolder}/dpdk",
                "env": {
                    "RTE_TARGET": "x86_64-native-linuxapp-gcc",
                    "EXTRA_CFLAGS": "-O0 -g"
                }
            }
        },

        {
            "label": "make debug dpdk",
            "type": "shell",
            "command": "make",
            "args": [
                "install",
                "T=$RTE_TARGET",
                "-j"
            ],
            "options": {
                "cwd": "${workspaceFolder}/dpdk",
                "env": {
                    "RTE_TARGET": "x86_64-native-linuxapp-gcc",
                    "EXTRA_CFLAGS": "-O0 -g"
                }
            }
        },

        {
            "label": "run spp",
            "type": "shell",
            "command": "bash start.sh",
            "args": [],
            "options": {
                "cwd": "${workspaceFolder}/spp/bin",
            }
        }
    ]
}